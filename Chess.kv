                source: 'resources/figures1/wknight.jpg'
                size: self.texture_size

            Button:
                id: left knight
                text: "Left knight key is: " + app.fig_keys['left knight']
                on_release: app.keyboard_listener('left knight')

        BoxLayout:
            padding: 2
            Image:
                size_hint: 0.3, 1
                source: 'resources/figures1/wknight.jpg'
                size: self.texture_size

            Button:
